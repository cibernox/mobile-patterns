<article class="article-detail previous-article {{unless attrs.previousArticle "placeholder"}}" style="{{articleStyle}}">
  <header><h2>{{attrs.previousArticle.header}}</h2></header>
  <div class="article-body">{{{attrs.previousArticle.body}}}</div>
</article>

<article class="article-detail current-article" style="{{articleStyle}}">
  <header><h2>{{attrs.currentArticle.header}}</h2></header>
  <div class="article-body">{{{attrs.currentArticle.body}}}</div>
</article>

<article class="article-detail next-article {{unless attrs.nextArticle "placeholder"}}" style="{{articleStyle}}">
  <header><h2>{{attrs.nextArticle.header}}</h2></header>
  <div class="article-body">{{{attrs.nextArticle.body}}}</div>
</article>
